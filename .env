# ============================================
# CLAUDE FLOW FORK - FEATURE FLAGS
# ============================================

# MODIFICATION 1: JSON Streaming
# Enable raw JSON passthrough for SwarmUI visualization
CLAUDE_FLOW_PASSTHROUGH=true

# MODIFICATION 2: --no-chaining Bug Fix
# Respect --no-chaining flag for task dependencies
CLAUDE_FLOW_NO_DEPENDENCY_CHAINING=true

# Optional: Force dependency chaining override
# CLAUDE_FLOW_FORCE_DEPENDENCY_CHAINING=false

# Fork Identification
CLAUDE_FLOW_FORK_VERSION=swarm-ui-custom-v1.0
CLAUDE_FLOW_FORK_NAME=claude-flow-swarm-ui
CLAUDE_FLOW_FORK_ENABLED=true

# SwarmUI Integration
ENABLE_CHILD_PROCESS_MONITORING=true
CHILD_PROCESS_DISCOVERY_INTERVAL=2000
CHILD_PROCESS_MAX_DISCOVERY_ATTEMPTS=30
CHILD_PROCESS_MONITORING_DELAY=3000
SESSION_BUFFER_SIZE=1000

# Debug Options
# CLAUDE_FLOW_DEBUG=true
# CLAUDE_FLOW_LOG_LEVEL=info

# Suppress dotenv output for clean JSON streams
DOTENV_CONFIG_QUIET=true